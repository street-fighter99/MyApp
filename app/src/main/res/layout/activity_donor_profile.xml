<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorProfile"
    android:background="@drawable/donorbackground"
    android:orientation="vertical">
    <TextView
        android:id="@+id/RBTextView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/round_textview"
        android:text="B+ve"
        android:textSize="40dp"
        android:textColor="#EC8080"
        android:gravity="center"
        android:fontFamily="@font/javatext"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/javatext"
                android:text="Name : "
                android:textSize="20dp"
                android:textColor="#EC8080"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/NameOfThedonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/javatext"
                android:text="NameOfTheDonor"
                android:textSize="20dp"
                android:textColor="#EC8080"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/javatext"
                android:text="Place : "
                android:textSize="20dp"
                android:textColor="#EC8080"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/PlaceOfTheDonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/javatext"
                android:text="PlaceOfTheDonor"
                android:textSize="20dp"
                android:textColor="#EC8080"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/javatext"
                android:text="Phone : "
                android:textSize="20dp"
                android:textColor="#EC8080"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/PhoneOfTheDonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/javatext"
                android:text="PhoneOfTheDonor"
                android:textSize="20dp"
                android:textColor="#EC8080"/>
        </LinearLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="3"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/callDonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calldonor"
                android:layout_columnWeight="1"/>
            <ImageView
                android:id="@+id/deleteDonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/deletedonor"
                android:layout_marginLeft="50dp"
                android:layout_columnWeight="1"/>
            <ImageView
                android:id="@+id/editDonor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/editdonor"
                android:layout_marginLeft="50dp"
                android:layout_columnWeight="1"/>

        </GridLayout>
    </LinearLayout>

</LinearLayout>